<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.yedam.student.mapper.StudentMapper">
	<select id="studentList" resultType="student">
		select * from student order by 1 desc
	</select>
	
	<insert id="addStudent" parameterType="student">
		insert into student values (#{studentNo}, #{studentName}, #{scoreEng}, #{scoreMath})
	</insert>
	
	<delete id="remStudent" parameterType="student">
		delete from student where student_no =#{sno}
	</delete>
</mapper>